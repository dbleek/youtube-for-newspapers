{
    "processing_pipeline": {
        "batchsize" : 5,
        "samplesize": 100,
        "random_state":42,
        "keywords" : {
            "min_ngrams": 1,
            "max_ngrams": 3,
            "num_keywords": 20,
            "context_chars": ["(", ")", "?", "!", ".", ","]
        },
        "doc2vec": {
            "pretrained_model" : {
                "name" : "doc2vec_gigaword_300",
                "lang": "en"
            },
            "vector_size" : 300,
            "vector_output": false
        }
    },
    "nosql_database" : {
        "connection" : {
            "database": "bigdata",
            "collection":"newspapers"
        },
        "k" : 20,
        "atlas_index" : {
            "definition": {
                "mappings": {
                    "fields": {
                    	"finished_embeddings": [{
                        	"dimensions": 300,
                        	"similarity": "euclidean",
                        	"type": "knnVector"
                        },
            			{
                  			"type": "filter",
                  			"path": "ObjectType"
                        }]
                    }
            	}
            },
            "name": "doc2vec_index"
        }
    }
}
